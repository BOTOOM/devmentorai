{
  "branches": ["master"],
  "tagFormat": "ext-v${version}",
  "plugins": [
    [
      "@semantic-release/commit-analyzer",
      {
        "preset": "conventionalcommits",
        "releaseRules": [
          { "type": "feat", "release": "minor" },
          { "type": "fix", "release": "patch" },
          { "type": "perf", "release": "patch" },
          { "type": "refactor", "release": "patch" },
          { "type": "chore", "scope": "deps", "release": "patch" },
          { "breaking": true, "release": "major" }
        ]
      }
    ],
    [
      "@semantic-release/release-notes-generator",
      {
        "preset": "conventionalcommits",
        "presetConfig": {
          "types": [
            { "type": "feat", "section": "Features" },
            { "type": "fix", "section": "Bug Fixes" },
            { "type": "perf", "section": "Performance" },
            { "type": "refactor", "section": "Refactoring" },
            { "type": "docs", "section": "Documentation" },
            { "type": "chore", "section": "Maintenance" }
          ]
        }
      }
    ],
    [
      "@semantic-release/changelog",
      {
        "changelogFile": "CHANGELOG.md"
      }
    ],
    [
      "@semantic-release/exec",
      {
        "prepareCmd": "node ../../scripts/sync-extension-version.mjs ${nextRelease.version} && node ../../scripts/sync-extension-version-strings.mjs ${nextRelease.version} && pnpm build && pnpm build:firefox && pnpm zip && pnpm zip:firefox && mv .output/*-firefox.zip .output/devmentoraiextension-${nextRelease.version}-firefox.xpi"
      }
    ],
    [
      "@semantic-release/github",
      {
        "assets": [
          { "path": ".output/*-chrome.zip", "label": "DevMentorAI-${nextRelease.version}-chrome.zip" },
          { "path": ".output/*-firefox.xpi", "label": "DevMentorAI-${nextRelease.version}-firefox.xpi" }
        ],
        "successComment": false,
        "failComment": false,
        "releasedLabels": false
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": ["package.json", "wxt.config.ts", "CHANGELOG.md", "src/version.ts"],
        "message": "chore(release): extension v${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ]
  ]
}
