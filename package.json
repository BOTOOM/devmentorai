{
  "name": "devmentorai",
  "version": "0.1.0",
  "private": true,
  "license": "MIT",
  "description": "DevOps mentoring and writing assistant powered by GitHub Copilot",
  "type": "module",
  "scripts": {
    "dev": "pnpm --filter @devmentorai/extension dev",
    "dev:backend": "pnpm --filter devmentorai-server dev",
    "dev:all": "pnpm run --parallel dev dev:backend",
    "build": "pnpm -r build",
    "build:extension": "pnpm --filter @devmentorai/extension build",
    "build:backend": "pnpm --filter devmentorai-server build",
    "test": "pnpm -r test",
    "test:unit": "pnpm --filter devmentorai-server test",
    "test:e2e": "pnpm --filter @devmentorai/e2e test",
    "lint": "pnpm -r lint",
    "typecheck": "pnpm -r typecheck",
    "clean": "pnpm -r clean && rm -rf node_modules"
  },
  "devDependencies": {
    "typescript": "^5.7.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@9.15.4"
}
